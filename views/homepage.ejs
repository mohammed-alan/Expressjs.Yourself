<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Expressjs.Yourself</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-100 to-pink-100 dark:from-gray-900 dark:to-gray-800 text-gray-800 dark:text-gray-200 font-sans">

  <!-- Header -->
  <header class="w-full bg-white dark:bg-gray-900 shadow-md py-4 px-6 flex items-center justify-between">
    <h2 class="text-2xl font-bold text-blue-600 dark:text-blue-400">
      <a href="/" class="hover:underline">Expressjs.Yourself</a>
    </h2>
    <nav class="space-x-6 text-gray-700 dark:text-gray-300 font-medium">
      <% if (user) { %>
        <a href="/create-post" class="hover:text-blue-600 dark:hover:text-blue-400 transition">Create Post</a>
        <a href="/logout" class="hover:text-blue-600 dark:hover:text-blue-400 transition">Logout</a>
      <% } else { %>
        <a href="/login" class="hover:text-blue-600 dark:hover:text-blue-400 transition">Login</a>
      <% } %>
    </nav>
  </header>

  <main class="max-w-2xl mx-auto p-6 space-y-10">
    <% if (randomPost) { %>
      <div class="bg-white/80 dark:bg-gray-900/70 backdrop-blur-md border border-gray-300 dark:border-gray-700 rounded-xl p-6 shadow">
        <h2 class="text-xl font-bold mb-2">Featured Post</h2>
        <h3 class="text-lg font-semibold mb-1"><%= randomPost.title %></h3>
        <p class="text-gray-700 dark:text-gray-300 mb-2"><%= randomPost.body %></p>
        <p class="text-sm text-right text-gray-500">By <%= randomPost.username %></p>
      </div>
    <% } %>

    <% if (!user) { %>
      <form action="/register" method="POST" class="bg-white/80 dark:bg-gray-900/70 backdrop-blur-md border border-gray-300 dark:border-gray-700 rounded-xl p-6 shadow space-y-6">
        <h2 class="text-2xl font-bold text-center mb-4">Create Your Account</h2>

        <% if (errors.length > 0) { %>
          <% errors.forEach(error => { %>
            <p class="text-sm text-red-600 bg-red-100 dark:bg-red-900/40 px-3 py-2 rounded border border-red-300 dark:border-red-700"><%= error %></p>
          <% }) %>
        <% } %>

        <div>
          <label for="username" class="block text-sm font-medium">Username</label>
          <input type="text" name="username" required class="mt-1 w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

        <div>
          <label for="password" class="block text-sm font-medium">Password</label>
          <input type="password" name="password" required class="mt-1 w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-400" />
        </div>

        <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-indigo-500 dark:from-blue-600 dark:to-indigo-700 text-white py-2 px-4 rounded-md font-semibold hover:from-blue-600 hover:to-indigo-600 transition-all duration-200">
          Sign Up
        </button>
      </form>
    <% } %>
  </main>

  <!-- Footer -->
  <footer class="w-full bg-white dark:bg-gray-900 shadow-inner py-4 text-center text-gray-600 dark:text-gray-400 text-sm">
    <p>Â© 2025 Expressjs.Yourself</p>
  </footer>
  
</body>
</html>
